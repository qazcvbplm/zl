<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.dingdian.order.bean.CommentBean"></variable>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:layout_marginBottom="16mm"
                android:layout_marginLeft="@dimen/size16mm"
                android:layout_marginRight="@dimen/size16mm"
                android:layout_marginTop="2mm"
                app:cardCornerRadius="8mm"
                android:elevation="2mm"
                android:layout_width="343mm"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/score"
                        android:textColor="@color/indianred"
                        android:text="@{model.core + `åˆ†`}"
                        android:textSize="16mm"
                        android:layout_marginLeft="16mm"
                        android:layout_marginTop="16mm"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="@color/darkgray"
                        android:text="@{model.createTime}"
                        android:textSize="14mm"
                        android:layout_marginRight="16mm"
                        android:layout_marginTop="16mm"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="@color/darkgray"
                        android:text="@{model.content}"
                        android:textSize="15mm"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_marginLeft="16mm"
                        android:layout_marginTop="16mm"
                        android:lineSpacingMultiplier="1.1"
                        app:layout_constraintTop_toBottomOf="@id/score"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="0mm"
                        android:layout_height="wrap_content"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>