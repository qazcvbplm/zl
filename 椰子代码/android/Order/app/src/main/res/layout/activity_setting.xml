<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.dingdian.order.ui.shop.SettingViewModel"></variable>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.shop.SettingActivity">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_marginTop="20mm"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                app:navigationIcon="@drawable/ic_back_black"
                android:layout_height="44mm">

            <TextView
                    android:textColor="@color/defaultBlack"
                    android:text="店铺设置"
                    android:textSize="14mm"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </android.support.v7.widget.Toolbar>

        <ScrollView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_width="0mm"
                android:layout_height="0mm">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="店铺名称"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:id="@+id/shopName"
                            app:layout_constraintHorizontal_bias="1"
                            android:textColor="@color/defaultBlack"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:background="@null"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:maxWidth="260mm"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>


                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="公告设置"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:id="@+id/topTitle"
                            app:layout_constraintHorizontal_bias="1"
                            android:textColor="@color/defaultBlack"
                            android:gravity="left|center_vertical"
                            android:text="今天打烊了"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:background="@null"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:maxWidth="260mm"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="手机号"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:id="@+id/shopPhone"
                            android:textColor="@color/defaultBlack"
                            app:layout_constraintHorizontal_bias="1"
                            android:gravity="left|center_vertical"
                            android:text="15015449845"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:background="@null"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:maxWidth="260mm"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="起送价"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:id="@+id/startPrice"
                            app:layout_constraintHorizontal_bias="1"
                            android:textColor="@color/defaultBlack"
                            android:gravity="left|center_vertical"
                            android:text="10"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:background="@null"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:maxWidth="260mm"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="外卖模式"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <Switch
                            android:id="@+id/sendModeFlag"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0mm"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="自取模式"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <Switch
                            android:id="@+id/getModeFlag"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0mm"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="堂食模式"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <Switch
                            android:id="@+id/tsModelFlag"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0mm"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                        android:layout_marginTop="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_marginLeft="16mm"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView

                            android:layout_marginRight="16mm"
                            android:text="店铺营业状态"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <Switch
                            android:id="@+id/openFlag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <Button
                        android:id="@+id/updateBtn"
                        android:textSize="14mm"
                        app:bl_corners_radius="8mm"
                        app:bl_solid_color="@color/colorPrimary"
                        android:layout_marginTop="48mm"
                        android:layout_marginRight="56mm"
                        android:layout_marginLeft="56mm"
                        app:bl_shape="rectangle"
                        android:textColor="@color/white"
                        android:text="保存"
                        android:layout_width="match_parent"
                        android:layout_height="44mm"/>

            </LinearLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>