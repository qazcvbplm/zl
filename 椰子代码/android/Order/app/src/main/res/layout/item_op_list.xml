<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.dingdian.order.bean.Op"></variable>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48mm">

            <TextView
                    android:layout_marginTop="4mm"
                    android:layout_marginLeft="@dimen/size16mm"
                    android:text="@{model.productName}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:maxWidth="200mm"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_height="@dimen/size20mm"/>
            <TextView
                    android:layout_marginBottom="4mm"
                    android:layout_marginLeft="@dimen/size16mm"
                    android:text="@{model.attributeName}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size20mm"/>

            <TextView
                    android:layout_marginRight="16mm"
                    android:text="@{`x`+model.productCount}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</layout>

