<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.dingdian.order.ui.login.LoginViewModel"></variable>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="667mm"
                        tools:context=".ui.login.LoginActivity">

                    <ImageView
                            android:id="@+id/logo"
                            android:src="@mipmap/logo"
                            android:layout_marginTop="64mm"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="64mm"/>
                    <TextView
                            android:id="@+id/name"
                            android:text="椰子校园商家版"
                            android:layout_marginTop="16mm"
                            android:textColor="@color/black"
                            android:textSize="14mm"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/accountLayout"
                            app:bl_shape="rectangle"
                            app:bl_stroke_color="#ECECEC"
                            app:bl_stroke_width="1px"
                            app:bl_corners_radius="22mm"
                            android:layout_marginTop="64mm"
                            android:layout_marginLeft="32mm"
                            android:layout_marginRight="32mm"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/name"
                            android:layout_width="0mm"
                            android:layout_height="44mm">

                        <ImageView
                                android:layout_marginLeft="16mm"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:src="@mipmap/ic_account"
                                android:layout_width="16mm"
                                android:layout_height="16mm"/>

                        <EditText
                                android:id="@+id/account"
                                android:hint="登录账户"
                                android:textSize="14mm"
                                android:background="@null"
                                android:layout_marginRight="16mm"
                                android:layout_marginLeft="48mm"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="0mm"
                                android:layout_height="0mm"/>

                    </android.support.constraint.ConstraintLayout>


                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/passwordLayout"
                            app:bl_shape="rectangle"
                            app:bl_stroke_color="#ECECEC"
                            app:bl_stroke_width="1px"
                            app:bl_corners_radius="22mm"
                            android:layout_marginTop="16mm"
                            android:layout_marginLeft="32mm"
                            android:layout_marginRight="32mm"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/accountLayout"
                            android:layout_width="0mm"
                            android:layout_height="44mm">

                        <ImageView
                                android:layout_marginLeft="16mm"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:src="@mipmap/ic_password"
                                android:layout_width="16mm"
                                android:layout_height="16mm"/>

                        <EditText
                                android:id="@+id/password"
                                android:hint="登录密码"
                                android:textSize="14mm"
                                android:background="@null"
                                android:layout_marginRight="16mm"
                                android:layout_marginLeft="48mm"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="0mm"
                                android:layout_height="0mm"/>

                    </android.support.constraint.ConstraintLayout>


                    <Button
                            android:onClick="@{()-> viewModel.login(account.getText().toString(),password.getText().toString(),context)}"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14mm"
                            android:text="确认登录"
                            app:bl_shape="rectangle"
                            app:bl_solid_color="#4875e5"
                            app:bl_corners_radius="22mm"
                            android:layout_marginLeft="32mm"
                            android:layout_marginRight="32mm"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="120mm"
                            android:layout_width="0mm"
                            android:layout_height="44mm"/>


                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
