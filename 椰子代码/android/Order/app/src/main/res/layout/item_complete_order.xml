<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="model" type="com.dingdian.order.bean.OrderBean"></variable>
        <import type="com.dingdian.order.utils.NumberFormatUtil"></import>
    </data>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:layout_marginTop="16mm"
                android:layout_marginLeft="@dimen/size16mm"
                android:layout_marginRight="16mm"
                android:layout_marginBottom="2mm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_marginLeft="2mm"
                    android:layout_marginRight="2mm"
                    app:bl_corners_radius="32mm"
                    app:bl_shape="rectangle"
                    app:bl_solid_color="#f69c4d"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="12mm"/>

            <android.support.v7.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="2mm"
                    app:cardCornerRadius="@dimen/size8mm"
                    android:layout_margin="2mm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="0mm"
                    android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/shopLayout"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="56mm">

                        <TextView
                                android:layout_marginLeft="@dimen/size8mm"
                                android:layout_marginTop="@dimen/size8mm"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:text="@{model.shopName}"
                                android:textColor="@color/defaultBlack"
                                android:textSize="@dimen/size14mm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/createTime"
                                android:layout_marginBottom="8mm"
                                android:layout_marginLeft="@dimen/size8mm"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="@{model.createTime}"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/size13mm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginBottom="8mm"
                                android:layout_marginLeft="@dimen/size8mm"
                                app:layout_constraintLeft_toRightOf="@id/createTime"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="@{model.getOrderType()}"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/size14mm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_marginTop="@dimen/size8mm"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:gravity="bottom|right"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:textStyle="bold"
                                    android:layout_marginRight="4mm"
                                    android:layout_marginLeft="@dimen/size8mm"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:text="@{model.waterNumber+``}"
                                    android:textColor="@color/defaultBlack"
                                    android:textSize="@dimen/size16mm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:gravity="bottom"
                                    android:layout_marginRight="8mm"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:text="号"
                                    android:textColor="@color/defaultBlack"
                                    android:textSize="@dimen/size10mm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_marginBottom="@dimen/size8mm"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:gravity="center_vertical|right"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <com.noober.background.view.BLTextView
                                    android:layout_marginRight="@dimen/size8mm"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toLeftOf="@id/status"
                                    app:bl_corners_radius="4mm"
                                    app:bl_solid_color="#f69c4d"
                                    app:bl_shape="rectangle"
                                    android:layout_width="8mm"
                                    android:layout_height="8mm"/>

                            <TextView
                                    android:id="@+id/status"
                                    android:layout_marginRight="8mm"
                                    android:layout_marginLeft="@dimen/size8mm"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:text="已完成"
                                    android:textColor="@color/defaultBlack"
                                    android:textSize="@dimen/size13mm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <View
                                android:background="#f3f3f3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="1mm"></View>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/userLayout"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/shopLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/location"
                                android:layout_marginLeft="@dimen/size16mm"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:src="@drawable/location"
                                android:layout_width="@dimen/size24mm"
                                android:layout_height="@dimen/size24mm"/>

                        <TextView
                                android:layout_marginLeft="@dimen/size16mm"
                                android:id="@+id/userName"
                                android:text="@{model.addressName}"
                                android:layout_marginTop="@dimen/size8mm"
                                app:layout_constraintLeft_toRightOf="@id/location"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginLeft="@dimen/size16mm"
                                android:id="@+id/userPhone"
                                android:text="@{model.formatAddressPhone()}"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="@dimen/size8mm"
                                app:layout_constraintLeft_toRightOf="@id/userName"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginBottom="@dimen/size8mm"
                                android:layout_marginLeft="@dimen/size16mm"
                                android:id="@+id/address"
                                android:text="@{model.addressDetail}"
                                android:layout_marginTop="@dimen/size8mm"
                                app:layout_constraintLeft_toRightOf="@id/location"
                                app:layout_constraintTop_toBottomOf="@id/userName"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginRight="@dimen/size16mm"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="0mm"
                                android:layout_height="wrap_content"/>

                        <View
                                android:background="#f3f3f3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="1mm"></View>


                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                            visibleOrGone="@{model.showSenderInfo()}"
                            android:id="@+id/sendLayout"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/userLayout"
                            android:layout_width="match_parent"
                            android:layout_height="44mm">

                        <ImageView
                                android:id="@+id/runner"
                                android:layout_marginLeft="@dimen/size16mm"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:src="@drawable/runner"
                                android:layout_width="@dimen/size24mm"
                                android:layout_height="@dimen/size24mm"/>

                        <TextView
                                android:layout_marginLeft="@dimen/size16mm"
                                android:id="@+id/sendName"
                                android:text="@{model.senderName+``}"
                                app:layout_constraintLeft_toRightOf="@id/runner"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginLeft="@dimen/size16mm"
                                android:id="@+id/sendPhone"
                                android:text="@{model.formatSenderPhone()}"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintLeft_toRightOf="@id/sendName"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <View
                                android:background="#f3f3f3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="1mm"></View>


                    </android.support.constraint.ConstraintLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sendLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <android.support.constraint.ConstraintLayout
                                android:layout_marginTop="@dimen/size8mm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="170mm"
                                    android:layout_height="wrap_content">

                                <TextView
                                        android:textColor="@color/defaultBlack"
                                        android:textSize="@dimen/size15mm"
                                        android:layout_marginLeft="@dimen/size8mm"
                                        android:layout_marginRight="@dimen/size8mm"
                                        android:text="实付款："
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                <TextView
                                        android:textSize="@dimen/size13mm"
                                        android:textColor="@color/indianred"
                                        android:text="@{`￥`+NumberFormatUtil.format(model.payPrice)}"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                            </LinearLayout>

                            <LinearLayout
                                    app:layout_constraintRight_toRightOf="parent"
                                    android:orientation="horizontal"
                                    android:layout_width="170mm"
                                    android:layout_height="wrap_content">

                                <TextView
                                        android:textColor="@color/defaultBlack"
                                        android:textSize="@dimen/size15mm"
                                        android:layout_marginLeft="@dimen/size8mm"
                                        android:layout_marginRight="@dimen/size8mm"
                                        android:text="已优惠："
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                <TextView
                                        android:textSize="@dimen/size13mm"
                                        android:textColor="@color/indianred"
                                        android:text="@{`￥`+NumberFormatUtil.format(model.discountPrice)}"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                            </LinearLayout>


                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                                android:layout_marginTop="@dimen/size8mm"
                                android:layout_marginBottom="8mm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="170mm"
                                    android:layout_height="wrap_content">

                                <TextView
                                        android:textColor="@color/defaultBlack"
                                        android:textSize="@dimen/size15mm"
                                        android:layout_marginLeft="@dimen/size8mm"
                                        android:layout_marginRight="@dimen/size8mm"
                                        android:text="餐盒费："
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                <TextView
                                        android:textSize="@dimen/size13mm"
                                        android:textColor="@color/indianred"
                                        android:text="@{`￥`+NumberFormatUtil.format(model.boxPrice)}"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                            </LinearLayout>

                            <LinearLayout
                                    app:layout_constraintRight_toRightOf="parent"
                                    android:orientation="horizontal"
                                    android:layout_width="170mm"
                                    android:layout_height="wrap_content">

                                <TextView
                                        android:textColor="@color/defaultBlack"
                                        android:textSize="@dimen/size15mm"
                                        android:layout_marginLeft="@dimen/size8mm"
                                        android:layout_marginRight="@dimen/size8mm"
                                        android:text="配送费："
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                <TextView
                                        android:textSize="@dimen/size13mm"
                                        android:textColor="@color/indianred"
                                        android:text="@{`￥`+NumberFormatUtil.format(model.sendPrice)}"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                            </LinearLayout>


                        </android.support.constraint.ConstraintLayout>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:textColor="@color/defaultBlack"
                                    android:textSize="@dimen/size15mm"
                                    android:layout_marginLeft="@dimen/size8mm"
                                    android:layout_marginRight="@dimen/size8mm"
                                    android:text="预计送达："
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:textSize="@dimen/size13mm"
                                    android:textColor="@color/indianred"
                                    android:text="@{`当日`+model.reseverTime}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </LinearLayout>

                        <LinearLayout
                                android:layout_marginTop="8mm"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:textColor="@color/defaultBlack"
                                    android:textSize="@dimen/size15mm"
                                    android:layout_marginLeft="@dimen/size8mm"
                                    android:layout_marginRight="@dimen/size8mm"
                                    android:text="备注信息："
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:lineSpacingMultiplier="1.1"
                                    android:layout_marginRight="16mm"
                                    android:textSize="@dimen/size12mm"
                                    android:textColor="@color/darkgray"
                                    android:text="@{model.remark}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:layout_marginBottom="@dimen/size16mm"
                                android:layout_marginTop="@dimen/size8mm"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <Button
                                    android:id="@+id/viewGoods"
                                    android:elevation="2mm"
                                    app:bl_solid_color="@color/white"
                                    app:bl_stroke_color="@color/darkgray"
                                    app:bl_corners_radius="4mm"
                                    app:bl_stroke_width="1mm"
                                    app:bl_shape="rectangle"
                                    android:text="查看商品"
                                    android:textColor="@color/darkgray"
                                    android:textSize="@dimen/size13mm"
                                    android:layout_width="311mm"
                                    android:layout_height="40mm"/>

                        </LinearLayout>


                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</layout>