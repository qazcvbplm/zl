<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="vm" type="com.dingdian.order.ui.goods.EditViewModel"></variable>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.goods.EditActivity">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_marginTop="20mm"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                app:navigationIcon="@drawable/ic_back_black"
                android:layout_height="44mm">

            <TextView
                    android:textColor="@color/defaultBlack"
                    android:text="商品编辑"
                    android:textSize="14mm"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </android.support.v7.widget.Toolbar>

        <ScrollView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_width="0mm"
                android:layout_height="0mm">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/goodsImage"
                        android:src="@drawable/ic_goods_default"
                        android:layout_marginBottom="16mm"
                        android:layout_marginTop="16mm"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="72mm"
                        android:layout_height="74mm"/>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="商品名称"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:id="@+id/goodsName"
                            android:textColor="@color/defaultBlack"
                            android:gravity="right|center_vertical"
                            android:text=""
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:background="@null"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0mm"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="商品折扣"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:id="@+id/discount"
                            android:textColor="@color/defaultBlack"
                            android:gravity="right|center_vertical"
                            android:text=""
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:background="@null"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0mm"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="计算餐盒费"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <Switch
                            android:id="@+id/boxPriceSwitch"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0mm"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="库存量"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="64mm"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:id="@+id/stock"
                            android:textColor="@color/defaultBlack"
                            android:gravity="right|center_vertical"
                            android:text="0"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:background="@null"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0mm"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_marginLeft="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="是否开启库存"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <Switch
                            android:id="@+id/stockFlag"
                            android:layout_marginLeft="64mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0mm"
                            android:layout_height="match_parent"/>

                    <View
                            android:background="@color/darkgray"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5mm"></View>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:id="@+id/attrHeader"
                        android:layout_marginLeft="@dimen/size16mm"
                        android:layout_marginRight="@dimen/size16mm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/size16mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="规格名称"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="140mm"
                            android:layout_height="@dimen/size20mm"/>

                    <TextView
                            android:gravity="center_vertical"
                            android:layout_marginLeft="148mm"
                            android:layout_marginTop="@dimen/size16mm"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/defaultBlack"
                            android:textSize="14mm"
                            android:text="规格价格"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="140mm"
                            android:layout_height="@dimen/size20mm"/>

                    <EditText
                            android:id="@+id/attrName"
                            app:bl_corners_radius="4mm"
                            android:paddingRight="@dimen/size8mm"
                            android:paddingLeft="@dimen/size8mm"
                            app:bl_stroke_color="@color/darkgray"
                            app:bl_stroke_width="1mm"
                            android:hint="请输入规格名称"
                            app:bl_shape="rectangle"
                            android:textColor="@color/defaultBlack"
                            android:layout_marginTop="48mm"
                            android:background="@null"
                            android:textSize="@dimen/size12mm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_width="140mm"
                            android:layout_height="32mm"/>

                    <EditText
                            android:id="@+id/attrPrice"
                            app:bl_corners_radius="4mm"
                            android:paddingRight="@dimen/size8mm"
                            android:paddingLeft="@dimen/size8mm"
                            app:bl_stroke_color="@color/darkgray"
                            app:bl_stroke_width="1mm"
                            android:hint="请输入规格价格"
                            app:bl_shape="rectangle"
                            android:textColor="@color/defaultBlack"
                            android:layout_marginTop="48mm"
                            android:background="@null"
                            android:textSize="@dimen/size12mm"
                            android:layout_marginLeft="148mm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_width="140mm"
                            android:layout_height="32mm"/>

                    <TextView
                            android:id="@+id/add"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size16mm"
                            android:text="添加"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="40mm"
                            android:layout_height="32mm"/>


                </android.support.constraint.ConstraintLayout>

                <com.dingdian.order.ui.widget.NoScrollListView
                        android:id="@+id/listView"
                        android:cacheColorHint="@color/transparent"
                        android:listSelector="@color/transparent"
                        android:divider="@color/transparent"
                        android:layout_marginRight="@dimen/size16mm"
                        android:layout_marginLeft="@dimen/size16mm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </com.dingdian.order.ui.widget.NoScrollListView>

                <LinearLayout
                        android:layout_marginTop="16mm"
                        android:layout_marginRight="16mm"
                        android:layout_marginLeft="16mm"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44mm">

                    <TextView

                            android:layout_marginRight="16mm"
                            android:text="上架状态"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <Switch
                            android:id="@+id/showFlag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <Button
                        android:id="@+id/saveBtn"
                        android:textSize="14mm"
                        app:bl_corners_radius="8mm"
                        app:bl_solid_color="@color/colorPrimary"
                        android:layout_marginTop="48mm"
                        android:layout_marginRight="56mm"
                        android:layout_marginLeft="56mm"
                        app:bl_shape="rectangle"
                        android:textColor="@color/white"
                        android:text="保存"
                        android:layout_marginBottom="32mm"
                        android:layout_width="match_parent"
                        android:layout_height="44mm"/>


            </LinearLayout>

        </ScrollView>


    </android.support.constraint.ConstraintLayout>
</layout>
